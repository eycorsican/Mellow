{
  "name": "mellow",
  "productName": "Mellow",
  "version": "0.1.3",
  "main": "src/main.js",
  "scripts": {
    "test": "jest",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "distmac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -m",
    "distwin": "electron-builder -w",
    "distlinux": "electron-builder -l",
    "dlgeo": "bash scripts/dl_mmdb.sh && bash scripts/dl_geosite.sh"
  },
  "devDependencies": {
    "electron": "^6.0.0",
    "electron-builder": "^21.2.0",
    "jest": "^24.9.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "default-gateway": "^5.0.3",
    "electron-log": "^3.0.7",
    "electron-prompt": "^1.3.1",
    "electron-store": "^4.0.0",
    "module-alias": "eycorsican/module-alias",
    "netmask": "^1.0.6",
    "semver": "^6.3.0",
    "sudo-prompt": "eycorsican/sudo-prompt"
  },
  "jest": {
    "moduleNameMapper": {
      "^@mellow(.*)$": "<rootDir>/src/$1"
    }
  },
  "moduleAliases": {
    "@mellow": "src"
  },
  "build": {
    "appId": "org.mellow.mellow",
    "mac": {
      "icon": "src/assets/icon.png",
      "extraResources": [
        {
          "from": "src/helper/darwin",
          "to": "src/helper",
          "filter": [
            "core",
            "install_helper",
            "md5sum",
            "route"
          ]
        },
        "src/helper/geosite.dat",
        "src/helper/geo.mmdb"
      ]
    },
    "win": {
      "icon": "src/assets/icon.png",
      "requestedExecutionLevel": "requireAdministrator",
      "extraResources": [
        {
          "from": "src/helper/win32",
          "to": "src/helper",
          "filter": [
            "core.exe",
            "ensure_tap_device.bat",
            "config_route.bat",
            "recover_route.bat",
            "tap-windows6"
          ]
        },
        {
          "from": "src/helper/win32/tap-windows6",
          "to": "src/helper/tap-windows6",
          "filter": [
            "*"
          ]
        },
        "src/helper/geosite.dat",
        "src/helper/geo.mmdb"
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.png",
      "extraResources": [
        {
          "from": "src/helper/linux",
          "to": "src/helper",
          "filter": [
            "config_route",
            "recover_route",
            "core",
            "install_helper",
            "md5sum",
            "ip"
          ]
        },
        "src/helper/geosite.dat",
        "src/helper/geo.mmdb"
      ]
    }
  }
}
