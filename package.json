{
  "name": "mellow",
  "productName": "Mellow",
  "version": "0.1.1",
  "description": "Mellow",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "distmac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -m",
    "distwin": "electron-builder -w",
    "distlinux": "electron-builder -l",
    "dlgeo": "bash scripts/dl_mmdb.sh && bash scripts/dl_geosite.sh"
  },
  "keywords": [
    "proxy"
  ],
  "author": "Mellow",
  "devDependencies": {
    "electron": "^6.0.0",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "default-gateway": "^5.0.3",
    "electron-log": "^3.0.7",
    "electron-prompt": "^1.3.1",
    "electron-store": "^4.0.0",
    "netmask": "^1.0.6",
    "semver": "^6.3.0",
    "sudo-prompt": "^9.0.0"
  },
  "build": {
    "appId": "com.mellow.mellow",
    "mac": {
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "helper/darwin",
          "to": "helper",
          "filter": [
            "core",
            "install_helper",
            "md5sum",
            "route"
          ]
        },
        "helper/geosite.dat",
        "helper/geo.mmdb"
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "requireAdministrator",
      "extraResources": [
        {
          "from": "helper/win32",
          "to": "helper",
          "filter": [
            "core.exe",
            "ensure_tap_device.bat",
            "config_route.bat",
            "recover_route.bat",
            "tap-windows6"
          ]
        },
        {
          "from": "helper/win32/tap-windows6",
          "to": "helper/tap-windows6",
          "filter": [
            "*"
          ]
        },
        "helper/geosite.dat",
        "helper/geo.mmdb"
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "helper/linux",
          "to": "helper",
          "filter": [
            "config_route",
            "recover_route",
            "core",
            "install_helper",
            "md5sum",
            "ip"
          ]
        },
        "helper/geosite.dat",
        "helper/geo.mmdb"
      ]
    }
  }
}
